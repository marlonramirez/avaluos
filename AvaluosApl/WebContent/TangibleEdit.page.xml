<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TangibleList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tangibleHome.wire}"/>

   <param name="tangibleFrom"/>
   <param name="tangibleIdActivoTan" value="#{tangibleHome.tangibleIdActivoTan}"/>
   <param name="activoFrom"/>
   <param name="activoIdActivo" value="#{activoHome.activoIdActivo}"/>



   <navigation from-action="#{tangibleHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Tangible.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tangibleHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Tangible.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tangibleHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TangibleList.xhtml"/>
      </rule>
   </navigation>

</page>
